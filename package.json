{
  "name": "kidspeak",
  "version": "1.2.0",
  "description": "KidSpeak block programming app",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "less": "node_modules/.bin/lessc css/style.less css/style.css",
    "build": "npm run less",
    "watch": "gulp watch",
    "all": "npm run build && npm run start",
    "postinstall": "install-app-deps",
    "pack:mac": "build -m -p always",
    "pack:linux": "build -l -p always",
    "pack:win": "build -w",
    "pack:all": "build -wml -p always"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Cyberlane/Kidspeak-2016.git"
  },
  "author": "Justin Nel",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.2",
    "electron-log": "^1.3.0",
    "electron-notifications": "^1.0.0",
    "electron-updater": "^1.8.1",
    "express": "^4.14.0",
    "serialport": "^4.0.3",
    "winreg": "^1.2.2"
  },
  "build": {
    "appId": "com.electron.kidspeak",
    "publish": [
      "github"
    ],
    "mac": {
      "category": "com.github.cyberlane.kidspeak-2016",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "nsis": {
      "perMachine": true
    }
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "electron": "^1.4.15",
    "electron-builder": "^15.4.3",
    "electron-rebuild": "^1.5.7",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "gulp": "^3.9.1",
    "gulp-less": "^3.1.0",
    "gulp-watch": "^4.3.10",
    "less": "^2.7.1",
    "node-gyp": "^3.5.0",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  }
}
