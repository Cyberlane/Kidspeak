{
  "name": "kidspeak",
  "version": "1.4.3",
  "description": "KidSpeak block programming app",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development electron .",
    "less": "node_modules/.bin/lessc css/style.less css/style.css",
    "watch": "cross-env NODE_ENV=development electron -r babel-register . -watch",
    "pack:mac": "build -m -p always",
    "pack:linux": "build -l -p always",
    "pack:win": "build -w -p always",
    "pack:all": "build -wml -p always",
    "rebuild": "electron-rebuild -f -w serialport",
    "postinstall": "electron-builder install-app-deps"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Cyberlane/Kidspeak-2016.git"
  },
  "author": "Justin Nel",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.17.2",
    "electron-log": "^2.2.7",
    "electron-notifications": "^1.0.0",
    "electron-updater": "^2.8.1",
    "express": "^4.15.3",
    "ncp": "^2.0.0",
    "portfinder": "^1.0.13",
    "rimraf": "^2.6.1",
    "serialport": "^5.0.0",
    "winreg": "^1.2.4"
  },
  "devDependencies": {
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.0.1",
    "electron": "^1.7.8",
    "electron-builder": "^19.18.1",
    "electron-compile": "^6.4.2",
    "electron-compilers": "^5.9.0",
    "electron-rebuild": "^1.5.11",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "gulp": "^3.9.1",
    "gulp-less": "^3.1.0",
    "gulp-watch": "^4.3.10",
    "less": "^2.7.1",
    "node-gyp": "^3.5.0",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.4.1"
  },
  "build": {
    "appId": "com.electron.kidspeak",
    "publish": [
      "github"
    ],
    "mac": {
      "category": "com.github.cyberlane.kidspeak-2016",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "nsis": {
      "perMachine": true
    }
  }
}
